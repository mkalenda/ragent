# Azure OpenAI Configuration
# Azure OpenAI endpoint (required)
RAGENT_AOAI_ENDPOINT="https://your-api-endpoint.openai.azure.com/"
# Azure OpenAI embedding deployment name (required)
RAGENT_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
# Azure OpenAI embedding deployment version (required)
RAGENT_EMBEDDING_DEPLOYMENT_VERSION=2025-01-01-preview
# Azure OpenAI LLM deployment name (required)
RAGENT_LLM_DEPLOYMENT_NAME=gpt-4
# Azure OpenAI LLM deployment version (required)
RAGENT_LLM_DEPLOYMENT_VERSION=2025-01-01-preview

# Document Processing Configuration
# Size of text chunks for splitting documents (default: 500)
RAGENT_CHUNK_SIZE=500
# Overlap between chunks (default: 50)
RAGENT_CHUNK_OVERLAP=50
# Number of documents to process in each batch (default: 100)
RAGENT_BATCH_SIZE=100

# Vector Store Configuration
# Directory to persist the vector store (default: ./chroma_db)
RAGENT_PERSIST_DIR=./chroma_db